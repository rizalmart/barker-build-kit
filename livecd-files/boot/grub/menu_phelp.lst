  root

title pupsfs=X zdrv=X fdrv=X adrv=X bdrv=X xdrv=X ydrv=X Override auto search\nPress Enter to go back to main menu
  configfile /boot/grub/menu.lst

title X has this format: paramater=partition:filename \npartition can be a name "sdc1", a Label "Work" or UUID "49baa82d-8c69"\nfilename can be "/path/filename", "filename" or absent (":" not needed)\nPress Enter to go back to main menu
  configfile /boot/grub/menu.lst
  
title punionfs=overlay Force use overlayfs as layered filesystem\nPress Enter to go back to main menu
  configfile /boot/grub/menu.lst
   
title punionfs=aufs Force use aufs as layered filesystem\nPress Enter to go back to main menu
  configfile /boot/grub/menu.lst
  
title phomedir=<folder name> Override /home and /root folder\nSpecify where your personal files will be saved outside the savefile.\nPress Enter to go back to main menu
  configfile /boot/grub/menu.lst  


